/* pages/homePages/homePages.wxss */

.home-container {
  width: 100%;
  height: 100%;
  flex-direction: column;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  background:#676A71;
}

.home-top {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height:490rpx;
  position: relative;
}
.home_top{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height:490rpx;
  position: absolute;
}
.home-top-image{
 width: 100%;
 height:490rpx;
}
.home-logo{
  width:90px;
  height:20px;
  line-height: 20px;
  background:url(/iconImages/logo1.png) no-repeat;
  background-size: contain;
  margin:25rpx 0 0 30rpx;
  padding-left:50rpx;
  box-sizing: border-box;
  color:#fff;
  font-size: 16px;
  font-style: italic;
}

.home-play {
  width: 92rpx;
  height: 92rpx;
  position: absolute;
  left:50%;
  margin-left: -48rpx;
  margin-top: -48rpx;
  top:50%;
  background: url(/iconImages/play.png) no-repeat;
  background-size: cover;
}
.home-search{
  width: 50rpx;
  height: 50rpx;
  background: url(/iconImages/search.png);
  background-size: cover;
  margin:25rpx 30rpx 0 0;
}

.home-bottom {
   box-shadow: 0 -10px 40px 20px #65686f;
  position: relative;
  width: 100%;
  height: 650rpx;
  box-sizing: border-box;

}

.home-con {
  width: 100%;
  height: 742rpx;
  position: absolute;
  top:-100rpx;
}

.con-all {
  width: 100%;
  height: 742rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.con-item {
  width: 94%;
  height: 600rpx;

  border-radius: 10px;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 90rpx;
  background: #fff;
}

.con-image {
  width: 260rpx;
  height: 350rpx;
  border-radius: 5px;
  position: absolute;
  top: 0rpx;
}

.image-size {
  width: 260rpx;
  height: 350rpx;
}

.con-title {
  color: #000;
  font-size:16px;
  margin-top:300rpx;
  font-weight:bold;
}
.con-summary,.con-actor{
  margin-top:30rpx;
  font-size: 14px;
  color:#646464;
  width:80%;
  text-align: center;
}